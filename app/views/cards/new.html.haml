.payment-main
  .payment-main__icon
    = link_to image_tag(src = "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"), "#"
  .payment-main__contents
    %h2.payment-main__title
      クレジットカード情報入力
    = form_with url: cards_path, method: :post, html: { name: "inputForm", class: "payment-main__form"} do |f|
      .payment-main__credit-card
        .payment-main__credit-card__inner
          = f.label :カード番号, class: 'payment-main__label'
          %span.payment-main__require
            必須
          = f.text_field :card_number, type: 'text',class: 'payment-main__field',placeholder: '半角数字のみ', maxlength: "16"
          .payment-main__cards-expire
            = f.label :有効期限, class: 'payment-main__label'
            %span.payment-main__require
              必須
            %br
            .payment-main__cards-expire__wrap
              = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'payment-main__field payment-main__field--side'
              %span.expire-text 月
              = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'payment-main__field'
              %span.expire-text 年
          .payment-main__cards-expire
            = f.label :セキュリティコード, class: 'payment-main__label'
            %span.payment-main__require
              必須
            = f.text_field :cvc, type: 'text', class: "payment-main__field", placeholder: 'カード背面4桁もしくは3桁の番号'
          .content-bottom#card_token
            = f.submit '追加する', class: "payment-main__submit", id: 'token_submit'